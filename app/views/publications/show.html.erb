<div class="row d-flex justify-content-center">

  <div class="col-md-4">
    <%= render @publication %>

    <div class="d-flex m-1 justify-content-around">
      <%= link_to "Back to publications", publications_path, class:'btn btn-secondary' %>
      <%= link_to "Edit this publication", edit_publication_path(@publication), class:'btn btn-primary' %>
      <%= link_to "Destroy this publication", @publication, class:'btn btn-danger', method: :delete %>
    </div>

  </div>

  <div class="col-md-4">

    <%= render 'comments/form' %>

    <h1>Comments</h1>

    <div class="scrollable-div">
      <% @comments.each do |c| %>

        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">

              <% if User.find(c.user_id).photo.attached? %>
                <%= image_tag User.find(c.user_id).photo.attached class:'img-comentario img-fluid rounded-start' %>
              <% else %>
                <%= image_tag "https://img.freepik.com/vector-premium/perfil-avatar-hombre-icono-redondo_24640-14046.jpg", class:'img-publication img-fluid rounded-start' %>
              <% end %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= User.find(c.user_id).name %></h5>
                <p class="card-text"><%= c.description %>.</p>
                <p class="card-text"><small class="text-body-secondary">Last updated <%= c.updated_at.strftime("%d %b %Y") %> ago</small></p>
              </div>
            </div>
          </div>
        </div>
        
      <% end %>

    </div>

  </div>

  
</div>








